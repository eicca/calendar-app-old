.row
  .six.columns
    %h4 Top teachers
    = render template: '/teachers/index', locals:{ collection: @teachers}
    = link_to "All teachers", teachers_path
  .six.columns
    %h4 Top students
    %table.twelve
      %tr
        %th Name
        %th Lessons count
      - @students.each do |student|
        %tr
          %td= student.name
          %td= student.lessons.count
